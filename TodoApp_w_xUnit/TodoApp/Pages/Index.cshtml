@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<div class="text-center">
	<h1 class="display-4">Todos</h1>
	<form method="post"
		  asp-page-handler="Todo">
		<input type="text" placeholder="Title" name="title" />
		<input type="text" placeholder="Enter your next Todo" name="description" />
		<button type="submit">Submit Todo</button>
	</form>
	@foreach (var item in Model.Todos)
	{
		string isDoneText = item.IsDone ? "Done" : "To do";
		string isDoneClass = item.IsDone ? "btn-success" : "btn-warning";
			<div class="row">
				<div class="col align-middle">
					<form method="post"
						  asp-page-handler="IsDoneStatus"
						  asp-route-id="@item.ID">
						<button type="submit" class=@isDoneClass>
							@isDoneText
						</button>
					</form>
				</div>
				<div class="col-8">
					<h2>@item.Title</h2>
					<p>@item.Description</p>
				</div>
				<div class="col">
					<form method="post"
						  asp-page-handler="Delete"
						  asp-route-id="@item.ID">
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>

	}

</div>
